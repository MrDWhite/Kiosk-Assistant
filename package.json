{
  "name": "kiosk",
  "version": "0.1.1",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack -p 3001",
    "build": "next build --turbopack",
    "start": "next start -p 3001",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "eslint",
    "electron": "cross-env PORT=3001 KIOSK_URL=http://localhost:3001 concurrently \"npm run dev\" \"wait-on http://localhost:3001 && electron electron/dev.js\"",
    "dist": "npm run build && electron-builder --mac --x64 --arm64"
  },
  "build": {
    "appId": "com.employbridge.kiosk",
    "productName": "Employbridge Kiosk",
    "files": [
      "electron/main.js",
      "public/**/*",
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/favicon.ico"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-select": "^2.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "i18next": "^25.4.0",
    "ky": "^1.9.0",
    "lucide-react": "^0.540.0",
    "next": "15.5.0",
    "next-i18next": "^15.4.2",
    "next-themes": "^0.4.6",
    "posthog-js": "^1.260.1",
    "posthog-node": "^5.7.0",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-i18next": "^15.7.1",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "wait-on": "^7.2.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
